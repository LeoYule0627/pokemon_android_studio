<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.pokedex"
    tools:ignore="SpeakableTextPresentCheck">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="name" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/EN"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/JA"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="TextView" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/typeI"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:src="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/typeII"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:src="@tools:sample/avatars" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pokemonview"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                tools:src="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/pokemonview2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                tools:src="@tools:sample/avatars" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/CT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/height"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ST"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/weight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/infor_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/infor_normal"
                    android:paddingLeft="45dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/infor_fire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/infor_fire"
                    android:paddingLeft="45dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/infor_water"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/infor_water"
                    android:paddingLeft="45dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/infor_fighting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/infor_fighting"
                    android:paddingLeft="45dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/infor_grass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/infor_grass"
                    android:paddingLeft="45dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/infor_eletric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/infor_eletric"
                    android:paddingLeft="45dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/infor_rock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/infor_rock"
                    android:paddingLeft="45dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/infor_ground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/infor_ground"
                    android:paddingLeft="45dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/infor_fairy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/infor_fairy"
                    android:paddingLeft="45dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/infor_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/infor_dark"
                    android:paddingLeft="45dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/infor_ghost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/infor_ghost"
                    android:paddingLeft="45dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/infor_psychic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/infor_psychic"
                    android:paddingLeft="45dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/infor_poison"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/infor_poison"
                    android:paddingLeft="45dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/infor_bug"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/infor_bug"
                    android:paddingLeft="45dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/infor_flying"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/infor_flying"
                    android:paddingLeft="45dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/infor_steel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/infor_steel"
                    android:paddingLeft="45dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/infor_ice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/infor_ice"
                    android:paddingLeft="45dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/infor_dragon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/infor_dragon"
                    android:paddingLeft="45dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="100dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>